extends ./parent.pug

block navbar
block content
    form(action='/signup', method='POST')
        div
            label Username:
            input(type='text', name='username')
        div
            label Password:
            input(type='text', name='password')
        div 
            input(type='submit', value='Register')
    div
        a(href='/login') Already have an account? Click to log in.
    if message
        div 
            p #{message}
