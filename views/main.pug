extends ./parent.pug

block content
    div(class='container')
        h2 Stock lookup
    div(class='container')
        form(class='form-inline', action='checkprice', method='POST')
            div(class='form-group')
                input(type="text", class="form-control", name="symbol", aria-describedby="symbol", placeholder="Stock symbol")
            button(type='submit', class='btn btn-primary') Submit
    if cost
        div(class='container')
            p Price per share: #{cost}
        div(class='container')
            form(action='buyorsell', method='POST')
                p Number of shares:
                input(type='text', name='number', value='')
                input(type='submit', formaction='buy', value='Buy')
                input(type='submit', formaction='sell', value='Sell')
    if message 
        p #{message}
    
