extends ./parent.pug

block navbar
block content
    form(action='/login', method='POST')
        div
            label Username:
            input(type='text', name='username')
        div 
            label Password:
            input(type='text', name='password')
        div 
            input(type='submit', value='Log In')
    div 
        a(href='/signup') Don't have an account? Sign up.
    if message
        div 
            p #{message}
